<h1><%= @article.title %></h1>

<p><%= @article.body %></p>

<ul>
  <li><%= link_to "Back To Articles", articles_path %></li>
  <li><%= link_to "Edit", edit_article_path(@article.id) %></li>
  <li><%= link_to "Delete", article_path(@article.id), data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
    } %></li>
</ul>

<h2>Comments</h2>
<%= render @article.comments %>

<h2>Add a Comment</h2>
<%= render 'comments/form', article: @article %>
